<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/icon_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <include layout="@layout/profile_layout" />

        <Button
            android:id="@+id/pop_up_button"
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/menu_icon" />

    </RelativeLayout>


    <TextView
       android:layout_below="@id/icon_layout"
        android:id="@+id/postListText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:fontFamily="cursive"
        android:textIsSelectable="true"
        android:layout_marginBottom="50dp"
        android:text="hello"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />
    <LinearLayout

        android:layout_alignParentStart="true"
        android:layout_below="@+id/postListText" android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linearLayout"
        android:layout_marginBottom="10dp">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/like_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Like"
            android:background="@color/colorWhite"
            android:src="@drawable/smiley"
            android:scaleType="fitCenter"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            />

        <ImageButton
            android:id="@+id/comment_button"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:fontFamily="casual"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/comment"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <ImageButton

            android:id="@+id/share_button"
            android:layout_width="50dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:scaleType="fitCenter"
            android:src="@drawable/share"
            android:text="Share"
            android:background="@color/colorWhite"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>