<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="othello.com.example.bhavneetsingh.notes.LoginActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:fontFamily="cursive"
        android:text="Sign In"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/signheading"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="27dp"
        android:layout_marginTop="48dp"
        android:fontFamily="cursive"
        android:text="Email"
        android:textColor="@android:color/black"
        android:textSize="@dimen/signin"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:maxLength="40"
        android:inputType="textAutoComplete"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/username"
        android:layout_marginTop="39dp"
        android:fontFamily="cursive"
        android:text="Password"
        android:textColor="@android:color/black"
        android:textSize="@dimen/signin"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/username"
        android:layout_below="@+id/textView4"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="20" />

    <Button
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_password"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/textView3"
        android:background="@android:color/holo_red_light"
        android:fontFamily="cursive"
        android:text="Sign-In"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/signin"
        android:textStyle="bold" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sign_in"
        android:layout_alignBottom="@+id/sign_in"
        android:layout_marginStart="53dp"
        android:layout_toEndOf="@+id/sign_in"
        android:background="@android:color/holo_red_light"
        android:fontFamily="cursive"
        android:text="Register"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/signin"
        android:textStyle="bold" />
</RelativeLayout>
</ScrollView>