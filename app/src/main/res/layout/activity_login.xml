<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/celestial"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="95dp"
            android:fontFamily="cursive"
            android:textColor="@color/colorWhite"
            android:shadowColor="@color/colorPrimary"
            android:text="Welcome"
            android:textSize="@dimen/signheading"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/username"
            android:layout_width="@dimen/login_wid"

            android:layout_height="@dimen/login_hei"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="82dp"
            android:background="@drawable/edit_background"
            android:hint="Email"
            android:inputType="textAutoComplete"
            android:lines="1"
            android:maxLength="40"
            style="@style/button"/>

        <EditText
            android:id="@+id/user_password"
            android:layout_width="@dimen/login_wid"
            android:layout_height="@dimen/login_hei"
            android:layout_alignStart="@+id/username"
            android:layout_below="@+id/username"
            android:layout_marginTop="11dp"
            android:background="@drawable/edit_background"
            android:hint="Password"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="20"
            style="@style/button"/>

        <TextView
            android:id="@+id/sign_in"
            style="@style/button"
            android:layout_width="@dimen/login_wid"
            android:layout_height="@dimen/login_hei"
            android:layout_alignStart="@+id/user_password"
            android:layout_below="@+id/user_password"
            android:layout_marginTop="21dp"
            android:background="@drawable/button_gradient"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Sign-In" />

        <TextView
            android:id="@+id/register1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView2"
            android:layout_below="@+id/sign_in"
            android:layout_marginTop="31dp"
            android:text="Register"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/register1"
            android:layout_alignBottom="@+id/register1"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/register1"
            android:text="Password?"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="italic" />

    <ProgressBar
        android:id="@+id/loginbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sign_in"
        android:layout_centerHorizontal="true"
        android:fadingEdge="vertical"
        android:visibility="gone"
        android:progressDrawable="@drawable/login_progress" />
    </RelativeLayout>